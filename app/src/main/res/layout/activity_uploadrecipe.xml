<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EDE4"
    android:padding="24dp"
    tools:context=".Uploadrecipe">

    <!-- 1. EMPTY IMAGE BOX CONTAINER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_container"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E6DCCA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_recipe_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_camera"
            app:tint="#BA5D35" />

    </androidx.cardview.widget.CardView>

    <!-- 2. UPLOAD PHOTO BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Upload Photo"
        android:textColor="@android:color/white"
        android:backgroundTint="#BA5D35"
        app:icon="@android:drawable/ic_menu_upload"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/card_image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 3. RECIPE TEXT CONTAINER (Fills available space) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_recipe_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Write your recipe here..."
        app:boxStrokeColor="#BA5D35"
        app:hintTextColor="#BA5D35"
        app:layout_constraintTop_toBottomOf="@id/btn_upload_photo"
        app:layout_constraintBottom_toTopOf="@id/btn_submit_recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_recipe_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:textColor="#5D4037"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 4. UPLOAD RECIPE BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit_recipe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Publish Recipe"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#BA5D35"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>